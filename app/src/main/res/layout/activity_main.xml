<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#02B6B6"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="130dp">

        </RelativeLayout>

        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/baloo"
            android:text="Vid Downloader"
            android:textColor="#090909"
            android:textSize="35sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle3"
        android:layout_marginTop="@dimen/_68mdp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10mdp"
            android:background="@drawable/rectangle">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle">

                <RelativeLayout
                    android:id="@+id/relativelayout1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="@dimen/_5mdp"
                    android:background="@drawable/rectangle2"
                    android:onClick="layout1">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/youtube" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toRightOf="@id/image"
                        android:fontFamily="@font/baloo"
                        android:text="Download Youtube Videos"
                        android:textColor="#02B6B6"
                        android:textSize="@dimen/_15font_mdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/relativelayout1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="@dimen/_5mdp"
                    android:background="@drawable/rectangle2"
                    android:onClick="layout2">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/whatsapp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toRightOf="@id/image2"
                        android:fontFamily="@font/baloo"
                        android:text="Download WhatsApp Videos"
                        android:textColor="#02B6B6"
                        android:textSize="@dimen/_15font_mdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/relativelayout2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="@dimen/_5mdp"
                    android:background="@drawable/rectangle2"
                    android:onClick="layout3">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/instagram" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toRightOf="@id/image3"
                        android:fontFamily="@font/baloo"
                        android:text="Download Instagram Videos"
                        android:textColor="#02B6B6"
                        android:textSize="@dimen/_15font_mdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/relativelayout3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="@dimen/_5mdp"
                    android:background="@drawable/rectangle2"
                    android:onClick="layout4">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/sharechat" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toRightOf="@id/image5"
                        android:fontFamily="@font/baloo"
                        android:text="Download Sharechat Videos"
                        android:textColor="#02B6B6"
                        android:textSize="@dimen/_15font_mdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/relativelayout4"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:onClick="layout5"
                    android:layout_marginBottom="@dimen/_20mdp"
                    android:background="@drawable/rectangle2">

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/facebook" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toRightOf="@id/image6"
                        android:fontFamily="@font/baloo"
                        android:text="Download Youtube Videos"
                        android:textColor="#02B6B6"
                        android:textSize="@dimen/_15font_mdp" />

                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>